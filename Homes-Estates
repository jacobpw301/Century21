<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(window).scroll(function() {
        var scrollTop = $(window).scrollTop();
        var classesAdd = 'animated slow slideInLeft slower';
        $('.panel.panel-image').each(function() {
            var elm = $(this);
            var elmPos = elm.offset().top - (elm.height() * 0.5);
            if(scrollTop >= elmPos && !elm.hasClass('animateTrue')) {
                $('.layout-panel-bg-image-container', elm).addClass(classesAdd);
                elm.addClass('animateTrue')
            }
        });
    });
</script>
</p>
